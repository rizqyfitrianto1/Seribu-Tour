<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="#CFCFCF"
        android:layout_height="match_parent">

        <LinearLayout
                android:orientation="vertical"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:background="@color/whitePrimary"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/text_barcode_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="@color/blackPrimary"
                            tools:text="1234 65290 9855 65252" />

                    <androidx.cardview.widget.CardView
                            app:cardCornerRadius="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <ImageView
                                android:id="@+id/img_wisata"
                                android:src="@drawable/pulauharapanpng"
                                android:scaleType="fitXY"
                                android:layout_width="match_parent"
                                android:layout_height="180dp"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                            android:id="@+id/tv_nama_wisata"
                            android:textColor="@color/blackPrimary"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textAllCaps="true"
                            android:text="Berlibur ke Pulau Harapan"
                            android:layout_margin="10dp"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    <LinearLayout
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:layout_weight="1"
                                android:text="Date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        <LinearLayout
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <TextView
                                    android:text="Qty"
                                    android:paddingHorizontal="15dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            <TextView
                                    android:text="Price"
                                    android:textAlignment="center"
                                    android:paddingHorizontal="10dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:id="@+id/tv_date"
                                android:layout_weight="1"
                                android:text="Date"
                                android:textSize="16sp"
                                android:textColor="@color/blackPrimary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        <LinearLayout
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <TextView
                                    android:id="@+id/tv_qty"
                                    android:text="Qty"
                                    android:textSize="16sp"
                                    android:textColor="@color/blackPrimary"
                                    android:paddingHorizontal="15dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            <TextView
                                    android:id="@+id/tv_total_harga"
                                    android:text="Price"
                                    android:textAlignment="center"
                                    android:textSize="16sp"
                                    android:textColor="@color/blackPrimary"
                                    android:paddingHorizontal="10dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </LinearLayout>

                    <View
                            android:layout_marginVertical="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#CFCFCF"/>

                    <TextView
                            android:text="Data Pemesan"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/blackPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    <LinearLayout
                            android:layout_marginTop="10dp"
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:text="Nama"
                                android:textSize="16sp"
                                android:textColor="@color/blackPrimary"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:id="@+id/tv_nama"
                                android:text="Rizqy Fitrianto"
                                android:textColor="@color/blackPrimary"
                                android:textSize="16sp"
                                android:layout_weight="1"
                                android:textAlignment="textEnd"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_marginTop="10dp"
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:text="No. Handphone"
                                android:textSize="16sp"
                                android:textColor="@color/blackPrimary"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:id="@+id/tv_no_hp"
                                android:text="08125545555"
                                android:textColor="@color/blackPrimary"
                                android:textSize="16sp"
                                android:layout_weight="1"
                                android:textAlignment="textEnd"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_marginTop="10dp"
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:text="Email"
                                android:textSize="16sp"
                                android:textColor="@color/blackPrimary"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:id="@+id/tv_email"
                                android:text="rizqy@gmail.com"
                                android:textColor="@color/blackPrimary"
                                android:textSize="16sp"
                                android:layout_weight="1"
                                android:textAlignment="textEnd"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginTop="255dp"
                    android:src="@drawable/ic_grey"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_marginTop="255dp"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_grey"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>

            </LinearLayout>

        </LinearLayout>

        <Button
                android:id="@+id/btn_status"
                android:layout_margin="20sp"
                android:text="Confirm Ticket"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="18sp"
                android:textColor="@color/whitePrimary"
                android:background="@drawable/bg_btn_green_primary"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

    </RelativeLayout>
