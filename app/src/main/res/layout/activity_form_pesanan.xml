<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/whitePrimary"
        android:layout_height="match_parent"
        tools:context=".Customer.Activity.FormPesananActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <include
                    android:id="@+id/toolbar"
                    layout="@layout/toolbar"/>

        </com.google.android.material.appbar.AppBarLayout>

    <TextView
            android:textSize="18sp"
            android:padding="10dp"
            android:textStyle="bold"
            android:background="#cfcfcf"
            android:textColor="@color/blackPrimary"
            android:gravity="center_vertical"
            android:hint="Pilih Tanggal Liburan"
            android:textColorHint="@color/blackPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:id="@+id/ll_pick_date"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_date"
                android:layout_marginHorizontal="10dp" />

        <TextView
                android:id="@+id/tv_date"
                android:hint="Pilih tanggal liburan"
                android:textColorHint="@color/blackPrimary"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:textColor="@color/blackPrimary"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>


    </LinearLayout>

    <TextView
            android:textSize="18sp"
            android:padding="10dp"
            android:textStyle="bold"
            android:background="#cfcfcf"
            android:textColor="@color/blackPrimary"
            android:gravity="center_vertical"
            android:text="Jumlah Perserta Liburan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_account"
                android:layout_marginHorizontal="10dp" />

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:orientation="horizontal">

            <Button
                    android:id="@+id/btn_ticket_minus"
                    android:layout_width="25dp"
                    android:layout_height="32dp"
                    android:background="@drawable/btnmines" />

            <TextView
                    android:id="@+id/tv_ticket_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="12dp"
                    android:text="0"
                    android:textColor="@color/blackPrimary"
                    android:textSize="18sp" />

            <Button
                    android:id="@+id/btn_ticket_plus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/btnpls" />

        </LinearLayout>


        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="end"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/tv_harga"
                    android:textColor="@color/colorOrange"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:text="Rp 250.000"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:textColor="@color/blackPrimary"
                    android:textSize="18sp"
                    android:text=" / pax"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:layout_weight="1"
                android:textSize="18sp"
                android:padding="10dp"
                android:textStyle="bold"
                android:background="#cfcfcf"
                android:textColor="@color/blackPrimary"
                android:gravity="center_vertical"
                android:text="Data Pemesan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        <TextView
                android:id="@+id/tv_isi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ISI"
                android:layout_weight="1"
                android:textStyle="bold"
                android:background="#CFCFCF"
                android:gravity="center_vertical"
                android:textAlignment="textEnd"
                android:textSize="16sp"
                android:drawableEnd="@drawable/ic_arrow_right_blue"
                android:drawablePadding="5dp"
                android:textColor="@color/colorPrimaryDark"
                tools:ignore="RtlCompat"/>

    </LinearLayout>

        <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/blackPrimary"
                    android:gravity="center_vertical"
                    android:text="Nama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/tv_nama"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:textColor="@color/blackPrimary"
                    android:gravity="center_vertical"
                    android:hint="---"
                    android:textColorHint="@color/blackPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" tools:ignore="RtlCompat"/>

        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CFCFCF"/>

        <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/blackPrimary"
                    android:gravity="center_vertical"
                    android:text="No. Handphone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/tv_no_hp"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:textColor="@color/blackPrimary"
                    android:gravity="center_vertical"
                    android:hint="---"
                    android:textColorHint="@color/blackPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" tools:ignore="RtlCompat"/>

        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CFCFCF"/>

        <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/blackPrimary"
                    android:gravity="center_vertical"
                    android:text="Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/tv_email"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:textColor="@color/blackPrimary"
                    android:gravity="center_vertical"
                    android:hint="---"
                    android:textColorHint="@color/blackPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" tools:ignore="RtlCompat"/>

        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CFCFCF"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <CheckBox
                    android:id="@+id/cb_pemesan"
                    android:textSize="18sp"
                    android:background="#cfcfcf"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

            <TextView
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:background="#cfcfcf"
                    android:textColor="@color/bluePrimary"
                    android:gravity="center_vertical"
                    android:text="Samakan dengan data account"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

        </LinearLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView
            android:layout_alignParentBottom="true"
            app:cardElevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

            <TextView
                    android:text="Total harga"
                    android:textSize="18sp"
                    android:textColor="@color/blackPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                            android:id="@+id/tv_total_harga"
                            android:textColor="@color/colorOrange"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:text="Rp 250.000"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <Button
                        android:id="@+id/btn_bayar"
                        android:layout_marginStart="30dp"
                        android:textSize="18sp"
                        android:text="Pembayaran"
                        android:fontFamily="@font/montserrat_medium"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/bg_btn_blue_primary"
                        android:textColor="@color/whitePrimary"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"/>

            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>