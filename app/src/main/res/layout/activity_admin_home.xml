<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whitePrimary"
        tools:context=".Admin.Activity.HomeAdminActivity">

    <com.airbnb.lottie.LottieAnimationView
            app:lottie_fileName="1152-blue-waves.json"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            android:scaleType="fitXY"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

    <LinearLayout
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:src="@drawable/logo_app"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>

            <TextView
                    android:text="Seribu Tour"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="vertical"
                    android:padding="15dp"
                    android:background="@drawable/bg_gradient_primary_blue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tv_date"
                    android:hint="10 January 2020"
                    android:textColorHint="@color/whitePrimary"
                    android:textSize="18sp"
                    android:textColor="@color/whitePrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:id="@+id/ll_go_order"
                    android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_width="50dp"
                    android:src="@drawable/ic_ticket_white"
                    android:layout_height="50dp" />

            <TextView
                    android:id="@+id/tv_total_ticket"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="0 Ticket"
                    android:textColorHint="@color/whitePrimary"
                    android:textSize="20sp"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="@color/whitePrimary"/>

            <DigitalClock
                    android:id="@+id/simpleDigitalClock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/whitePrimary"
                    android:textSize="25sp" tools:ignore="RtlCompat"/>

        </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                    android:id="@+id/btn_scan"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="10dp"
                    android:layout_height="120dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:background="@drawable/bg_border"
                        android:layout_height="match_parent">

                    <ImageView
                            android:layout_marginTop="5dp"
                            android:layout_width="90dp"
                            android:src="@drawable/ic_scan"
                            android:padding="5dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="70dp" />

                    <TextView
                            android:layout_width="match_parent"
                            android:text="Scan"
                            android:textColor="@color/colorPrimaryDark"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:layout_height="wrap_content" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:id="@+id/btn_order"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="10dp"
                    android:layout_height="120dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:background="@drawable/bg_border"
                        android:layout_height="match_parent">

                    <ImageView
                            android:layout_marginTop="5dp"
                            android:layout_width="90dp"
                            android:src="@drawable/ic_order"
                            android:padding="5dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="70dp" />

                    <TextView
                            android:layout_width="match_parent"
                            android:text="Order"
                            android:textColor="@color/colorPrimaryDark"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:layout_height="wrap_content" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:id="@+id/btn_faq"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="10dp"
                    android:layout_height="120dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:background="@drawable/bg_border"
                        android:layout_height="match_parent">

                    <ImageView
                            android:layout_marginTop="5dp"
                            android:layout_width="90dp"
                            android:padding="5dp"
                            android:src="@drawable/ic_question"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="70dp" />

                    <TextView
                            android:layout_width="match_parent"
                            android:text="FAQ"
                            android:textColor="@color/colorPrimaryDark"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:layout_height="wrap_content" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                    android:id="@+id/btn_paket_wisata"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="10dp"
                    android:layout_height="120dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:background="@drawable/bg_border"
                        android:layout_height="match_parent">

                    <ImageView
                            android:layout_marginTop="5dp"
                            android:layout_width="90dp"
                            android:src="@drawable/ic_island"
                            android:padding="5dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="70dp" />

                    <TextView
                            android:layout_width="match_parent"
                            android:text="Paket Wisata"
                            android:textColor="@color/colorPrimaryDark"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:id="@+id/btn_category"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="10dp"
                    android:layout_height="120dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:background="@drawable/bg_border"
                        android:layout_height="match_parent">

                    <ImageView
                            android:layout_marginTop="5dp"
                            android:layout_width="90dp"
                            android:src="@drawable/ic_global"
                            android:padding="5dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="70dp"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:text="Category"
                            android:textColor="@color/colorPrimaryDark"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:layout_height="wrap_content" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:id="@+id/btn_account"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="10dp"
                    android:layout_height="120dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:background="@drawable/bg_border"
                        android:layout_height="match_parent">

                    <ImageView
                            android:layout_marginTop="5dp"
                            android:layout_width="90dp"
                            android:padding="5dp"
                            android:src="@drawable/ic_acc"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="70dp" />

                    <TextView
                            android:layout_width="match_parent"
                            android:text="Account"
                            android:textColor="@color/colorPrimaryDark"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:layout_height="wrap_content" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>