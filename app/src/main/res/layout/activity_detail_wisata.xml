<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Customer.Activity.DetailWisataActivity">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar"/>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
            android:layout_below="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/img_wisata"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_launcher_background"/>

            <LinearLayout
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="230dp"
                    android:background="@drawable/corner_background_top_white"
                    android:orientation="vertical"
                    android:padding="10dp">

                <TextView
                        android:id="@+id/tv_judul"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"
                        android:text="Wisata Secuil Surga di Pulau Harapan"
                        android:textAllCaps="true"
                        android:textColor="@color/blackPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/tv_durasi"
                        android:textSize="16sp"
                        android:layout_marginBottom="10dp"
                        android:text="1 Hari 0 Malam"
                        android:textColor="@color/blackPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/tv_deskripsi"
                        android:textSize="16sp"
                        android:layout_marginBottom="10dp"
                        android:text="Pulau dengan keindahan pantai pasir putih memiliki pesona yang luar biasa, sehingga banyak menarik wisatawan."
                        android:textColor="@color/blackPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#CFCFCF"/>

                <TextView
                        android:id="@+id/tv_rate"
                        android:layout_marginTop="10dp"
                        android:text="Rate and Review"
                        android:textSize="18sp"
                        android:textColor="@color/blackPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <LinearLayout
                        android:id="@+id/ll"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                <LinearLayout
                        android:id="@+id/ll_first"
                        android:layout_marginVertical="5dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/tv_rate_num"
                            android:text="0.0"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/colorOrange"
                            android:padding="5dp"
                            android:textSize="30sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <LinearLayout
                            android:layout_marginStart="5dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <RatingBar
                                android:id="@+id/rb_ticket"
                                android:numStars="5"
                                android:theme="@style/RatingBar"
                                style="@style/Widget.AppCompat.RatingBar.Indicator"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"/>

                        <TextView
                                android:id="@+id/tv_total_user"
                                android:text="0 reviews"
                                android:textColor="@color/blackPrimary"
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="end">

                        <ImageView
                                android:id="@+id/arrowBtn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/ic_arrow_right_blue" />

                    </LinearLayout>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                        android:visibility="gone"
                        android:id="@+id/rv_review"
                        android:layout_marginVertical="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>

                </LinearLayout>

                <View
                        android:id="@+id/view_rate"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#CFCFCF"/>

                <TextView
                        android:id="@+id/tv_lokasi"
                        android:layout_marginTop="10dp"
                        android:text="Pulau Kapuk"
                        android:textSize="18sp"
                        android:textColor="@color/blackPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <fragment
                          android:layout_marginTop="10dp"
                          android:layout_marginBottom="60dp"
                          android:layout_width="match_parent"
                          android:layout_height="230dp"
                          android:id="@+id/map"
                          android:name="com.google.android.gms.maps.SupportMapFragment"/>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

    <androidx.cardview.widget.CardView
            android:layout_alignParentBottom="true"
            app:cardElevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


    <LinearLayout
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="2"
            android:background="@color/whitePrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/tv_harga"
                    android:textColor="@color/colorOrange"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:text="Rp 250.000"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

            <TextView android:textColor="@color/blackPrimary"
                      android:textSize="18sp"
                      android:text=" / pax"
                      android:gravity="center_vertical"
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <Button
                    android:id="@+id/btn_pesan"
                    android:textSize="18sp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Pesan"
                    android:layout_marginStart="50dp"
                    android:layout_gravity="end"
                    android:background="@drawable/bg_btn_blue_primary"
                    android:textColor="@color/whitePrimary"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>

        </LinearLayout>

    </LinearLayout>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
            android:id="@+id/loading"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <include
                android:id="@+id/lottie"
                layout="@layout/lottie"/>

    </RelativeLayout>

</RelativeLayout>