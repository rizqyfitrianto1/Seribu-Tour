<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/whitePrimary"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar"/>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
            android:layout_below="@id/appbar"
            android:scrollbars="vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="wrap_content"
                    android:text="Add Image"
                    android:layout_marginTop="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"/>

            <ImageView
                    android:background="@drawable/bg_border"
                    android:id="@+id/img_category"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"/>

            <LinearLayout
                    android:layout_below="@id/img_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <EditText
                        android:background="@drawable/bg_border_et"
                        android:id="@+id/nameEditText"
                        android:hint="Nama Pulau"
                        android:textSize="18sp"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"/>

                <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="Map Location"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <EditText
                        android:background="@drawable/bg_border_et"
                        android:id="@+id/edt_lat"
                        android:hint="Latitude"
                        android:textSize="18sp"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"/>

                <EditText
                        android:background="@drawable/bg_border_et"
                        android:id="@+id/edt_lon"
                        android:hint="Longitude"
                        android:textSize="18sp"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"/>

                <Button
                        android:id="@+id/cekMap"
                        android:text="Cek Map"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"
                        android:fontFamily="@font/montserrat_medium"
                        android:background="@drawable/bg_border_primary"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"/>

                <fragment
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:id="@+id/map"
                        android:name="com.google.android.gms.maps.SupportMapFragment"/>

                <Button
                        android:id="@+id/saveBtn"
                        android:text="Save"
                        android:layout_marginVertical="15dp"
                        android:textColor="@color/whitePrimary"
                        android:textSize="18sp"
                        android:fontFamily="@font/montserrat_medium"
                        android:background="@drawable/bg_btn_blue_primary"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"/>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

    <RelativeLayout
            android:id="@+id/loading"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <include
                android:id="@+id/lottie"
                layout="@layout/lottie"/>

    </RelativeLayout>

</RelativeLayout>