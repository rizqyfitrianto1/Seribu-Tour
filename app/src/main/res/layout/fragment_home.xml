<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="@color/whitePrimary"
                tools:context=".Customer.Fragment.HomeFragment">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <View
                android:id="@+id/img_dasboard"
                android:background="@drawable/img_dasboard"
                android:layout_width="match_parent"
                android:layout_height="260dp"/>

        <LinearLayout
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:src="@drawable/logo_app"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>

            <TextView
                    android:text="Seribu Tour"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:textColor="@color/whitePrimary"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
                android:layout_below="@+id/img_dasboard"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tv_destinasi"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Destinasi Liburan"
                    android:textColor="@color/blackPrimary"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_below="@+id/tv_destinasi"
                    android:id="@+id/txt_destinasi_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pilihan tuijuan wisata Kepulauan Seribu"
                    android:layout_marginHorizontal="10dp"
                    android:textSize="16sp"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:layout_marginHorizontal="10dp"
                    android:id="@+id/rv_category"
                    android:background="@drawable/corner_background"
                    android:layout_height="wrap_content"/>


            <com.airbnb.lottie.LottieAnimationView
                    android:visibility="gone"
                    android:id="@+id/backup_category"
                    android:layout_marginTop="10dp"
                    app:lottie_fileName="11192-empty.json"
                    app:lottie_loop="true"
                    app:lottie_autoPlay="true"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitXY"
                    android:layout_width="120dp"
                    android:layout_height="120dp">

            </com.airbnb.lottie.LottieAnimationView>

            <LinearLayout
                    android:id="@+id/tv_wisata"
                    android:layout_below="@+id/rv_category"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:weightSum="3"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/txt_destination"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Paket Liburan"
                        android:textSize="18sp"
                        android:layout_weight="1"
                        android:textColor="@color/blackPrimary" android:layout_alignTop="@+id/tv_wisata"
                        android:layout_alignStart="@+id/tv_wisata"/>

                <TextView
                        android:id="@+id/txt_viewall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="View All"
                        android:layout_gravity="center_vertical"
                        android:textAlignment="textEnd"
                        android:layout_weight="2"
                        android:textSize="16sp"
                        android:drawableEnd="@drawable/ic_arrow_right_blue"
                        android:drawablePadding="5dp"
                        android:textColor="@color/colorPrimaryDark"
                        tools:ignore="RtlCompat" />

            </LinearLayout>

            <TextView
                    android:layout_below="@+id/tv_wisata"
                    android:id="@+id/txt_destination_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Temukan pilihan paket wisata liburan terbaikmu"
                    android:layout_marginHorizontal="10dp"
                    android:textSize="16sp"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:id="@+id/rv_wisata"
                    android:layout_below="@+id/txt_destination_desc"
                    android:layout_height="wrap_content"/>

            <com.airbnb.lottie.LottieAnimationView
                    android:visibility="gone"
                    android:id="@+id/backup_paket"
                    android:layout_marginTop="10dp"
                    app:lottie_fileName="11192-empty.json"
                    app:lottie_loop="true"
                    app:lottie_autoPlay="true"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitXY"
                    android:layout_width="120dp"
                    android:layout_height="120dp">

            </com.airbnb.lottie.LottieAnimationView>

        </LinearLayout>

    </RelativeLayout>

    </ScrollView>

    <RelativeLayout
            android:id="@+id/loading"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <include
                android:id="@+id/lottie"
                layout="@layout/lottie"/>

    </RelativeLayout>

</RelativeLayout>